<?php
namespace App\Facades\ActivityFacades\Activities;

use App\Repositories\ActivityRepo\ActivityRepository as ActivityRepository;

class ActivityClass extends BaseClass{
  public function __construct(ActivityRepository $repo){
    $this->ActivityRepository = $repo;
  }

  public function GetActivity($activity_id){
  	// $activity = $this->ActivityRepository->all();
    $activity = $this->ActivityRepository->GetActivityById($activity_id);
    return $activity;
  }
}
?>