<?php
namespace App\Facades\Tours;

use App\Repositories\JobResponsibilityRepository as JobResponsibilityRepository;

class JobResponsibilityClass extends BaseClass{  
  public function __construct(JobResponsibilityRepository $repo){
    $this->JobResponsibilityRepository = $repo;
  }

  public function GetJobResponsibility($id){
  	$job_responsibility_repo = $this->JobResponsibilityRepository->findBy('job_vacancy_id',$id);
  	
    return $job_responsibility_repo;
  }
}

?>
