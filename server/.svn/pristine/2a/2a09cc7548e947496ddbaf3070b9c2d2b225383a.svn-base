<?php
namespace App\Facades\Tours;

use App\Repositories\TourProgramRepository as TourProgramRepository;
use App\Repositories\DayTripRepository as DayTripRepository;

class TourProgramClass extends BaseClass{
  public function __construct(TourProgramRepository $repo){
    $this->TourProgramRepository= $repo;
  }
  public function ConvertModelToObject($model){
    
  }

  public function ConvertObjectToModel($object){
    if(empty($object)){return null;}

    return \Response::json(['']);
  }

  public function GetTourProgramById($value,$columns=array('*')){
    $tourObj = $this->TourProgramRepository->findBy('id',$value,$columns);
    if(empty($tourObj)){return null;}

    return $tourObj;
  }
}
