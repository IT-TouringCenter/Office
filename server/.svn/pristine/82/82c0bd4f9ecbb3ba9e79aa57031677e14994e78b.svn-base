<?php
namespace App\Facades\Tours;

use App\Repositories\HotelRepository as HotelRepository;
use App\hotel as hotel;

class HotelClass extends BaseClass{
  public function __construct(HotelRepository $repo){
    $this->HotelRepository = $repo;
  }

  public function GetHotel(){
    $hotel_arr = [];
    $hotel_repo = $this->HotelRepository->all();
    foreach($hotel_repo as $value){
      $this->hotel = new hotel;
      $this->hotel->hotelId = $value->id;
      $this->hotel->hotelName = $value->hotel;
      array_push($hotel_arr,$this->hotel);
    }
    return $hotel_arr;
  }

  public function GetPartnerFromHotel(){
    $partner_arr = [];
    $hotel = $this->HotelRepository->GetPartnerHotel();
    // $hotel = $this->HotelRepository->find(['id','hotel']);
    if($hotel==null || $hotel->count()<1){
    	return $this->Response(200,'No Content',null);
    }else{
    	foreach($hotel as $value){
	    	$partner = new hotel;
	    	$partner->hotelId = $value->id;
	    	$partner->hotelName = $value->hotel;
	    	array_push($partner_arr,$partner);
	    }
	    return $partner_arr;
    }    
  }
}

?>