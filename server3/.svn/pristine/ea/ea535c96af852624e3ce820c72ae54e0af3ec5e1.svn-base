<?php 
namespace App\Repositories;

use App\Repositories\Src\Contracts\IRepository;
use App\Repositories\Src\Eloquent\Repository;

class JobVacancyRepository extends Repository{
  function model(){return "App\job_vacancy";}

  public function GetDepartmentByVacancy(){
  	return $this->model
        		->where('job_type_id','!=',4)
        		->where('is_active',1)
        		->get();
  }

  public function GetDepartmentByInterns(){
  	return $this->model
  				->where('job_type_id','=',4)
  				->where('is_active',1)
  				->get();
  }

  public function GetVacancyIdByDepartment($department_id){
  	return $this->model
  				->where('job_department_id','=',$department_id)
  				->where('job_type_id','!=',4)
  				->where('is_active',1)
  				->get();
  }

  public function GetInternsIdByDepartment($department_id){
    return $this->model
                ->where('job_department_id','=',$department_id)
                ->where('job_type_id','=',4)
                ->where('is_active',1)
                ->get();
  }
}