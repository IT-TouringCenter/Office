<?php
namespace App\Http\Controllers;

use App\Http\Requests;
use App\Commons\ResponseCode;
use App\Commons\ResponseStatus;
use App\Http\Controllers\Controller;

use Illuminate\Http\Request;

class JobVacancyController extends MyBaseController {

	public function GetJobVacancy(){
    try {
      $result = \JobVacancyFacade::GetJobs();
      if($result==null){
       return $this->Response(ResponseStatus::NoContent,ResponseCode::NoContent,null);
      }
      return $this->Response(ResponseStatus::OK,ResponseCode::OK,$result);
    } catch (Exception $e) {
      return $this->Response(ResponseStatus::ServerError,ResponseCode::ServerError,'JobVacancyController.GetJobVacancy error: '.$e);
    }		
	}

  public function GetJobInformationByDepartment($vacancy_id){
    try{
      $result = \JobInformationFacade::GetJobInformationByDepartment($vacancy_id);
      if($result==null){
        return $this->Response(ResponsStatus::NoContent,ResponseCode::NoContent,null);
      }
      return $this->Response(ResponseStatus::OK,ResponseCode::OK,$result);
    }catch(Exception $e){
      return $this->Response(ResponseStatus::ServaerError,ResponseCode::ServerError,'JobVacancyController.GetJobInformationByDepartment error: '.$e);
    }
  }
}